#: FUNCTION ^G(no arguments)^g
#:   prints ^S$1^s split on ^S$SQLSEP^s tab-delimited.

function sql-fields {
	local TAB SEP F
	SEP='  '
	TAB='	'
	splitstr "$SQLSEP" "$1" sqlfields 
	for F in "${sqlfields[@]}"; do
		print -rn -- "$SEP$F" 
		SEP="$TAB"
	done
	print
}

