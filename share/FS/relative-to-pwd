#: FUNCTION ^Upath^u
#:   Given a ^Upath^u, print the relative version (relative to ^O$^o^VPWD^v).

needs realpath
function relative-to-pwd {
	local p abs diff common=/ backtrack IFS=/
	: ${1:?}
	[[ -a "$1" ]]|| die "No such file or path."
	abs=$(realpath -- "$1" 2>&1)
	diff=${PWD#/}
	for p in ${abs#/}; do
		[[ $diff/ == $p/* ]]|| break
		diff=${diff##"$p"?(/)}
		common=$common$p/
	done
	for p in $diff; do
		backtrack=../$backtrack
	done
	p=${backtrack%/}${abs#"${common%/}"}
	print -r -- "${p%/}"
}

