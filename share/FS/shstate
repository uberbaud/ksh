# vim: filetype=ksh tabstop=4 textwidth=72 noexpandtab

#: FUNCTION ^G(no arguments)^g
#:   Show history for /etc/profile and kshrc reading.

function shstate {
	local pids p psout cmd
	set -A pids -- $SHSTATE
	integer i=${#pids[*]}
	while ((i--)); do
		p=${pids[i]%:*}
		print -r -- "[${pids[i]}]"
		while ((p!=0)); do
			psout=$(ps -oppid=,command= -p ${p:?}) || break
			psout=${psout##+( )}
			cmd=${psout#* }
			print -r -- "  $p $cmd"
			p=${psout%% *}
		done
	done
}

