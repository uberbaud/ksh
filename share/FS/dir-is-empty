#: FUNCTION ^Udir-name^u
#:   Test whether a directory is empty.

function dir-is-empty {
	(($#==1))||		die 'dir-is-empty: Wants ONE directory name.'
	local D="${1%%+(/)}"/ # normalize dirname to one trailing slash
	[[ -d "$D" ]]||	die "^B$D^b is not a directory."
	set "$D"*
	[[ $1 == "$D"\* ]]
}

