# SYNOPSIS: Wrapper if stdout is a terminal

function fortune {
	needs fortune
	(($#))|| set -- all

	if [[ -t 1 ]]; then
		needs cowsay lolcat
		command fortune "$@" | cowsay -n | lolcat
	else
		command fortune "$@"
	fi
}


