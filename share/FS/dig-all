#: FUNCTION ^G(no arguments)^g
#:   Run dig for A MX CNAME TXT NS AAAA

needs header-line dig
function dig-all {
	local H T
	H=${1:?}
	set -- A AAAA CNAME MX NS SRV TXT SOA
	for T; do
		header-line 78 = [ ] $T
		dig +nostats +noauthority +nocomment +multiline -t $T "$H" |
			sed -E -e 1d -e '/^;/d'
	done
}

