#: FUNCTION ^G(no arguments)^g
#:   Sets ^O$^o^VREPLY^v to next available fd between 3 and 9
#:   Returns false on failure

function nextfd {
	local fd
	REPLY=''
	for fd in $(jot 7 3); do
		(: >&$fd ) 2>/dev/null && continue
		(: <&$fd ) 2>/dev/null && continue
		REPLY=$fd
		return 0
	done
	return 1
}

