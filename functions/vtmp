# SYNOPSIS: Create & edit a temporary file then output the contents
#           to stdout

function vtmp {
	cd $(mktemp -d)|| die 'Could not `mktemp -d`.'
	(($#))|| set tempfile
	touch	"$1"
	$EDITOR	"$1" 1>&2
	cat		"$1"
	rm		"$1"
	rmdir $PWD
	cd -
}


