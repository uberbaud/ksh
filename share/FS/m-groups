#: FUNCTION ^G(no arguments)^g
#:   Review mail groups

needs notify whence show
: ${MMH:?}
function m-groups {
	local G after
	set -- $(<"${MMH:?}"/groupmail)
	for G; do
		notify $G
		if [[ $(whence $G) == $G ]]; then
			after="${after-} $G"
		else
			show +inbox $G -form mhl.group
		fi
	done
	for G in $after; do
		"$G"
	done
}

