#: FUNCTION ^G(no arguments)^g
#:   vmgr vms-cmd

function git-status {
	local status
	status=$(git status --short "$1")
	if [[ $status = \?\?* ]]; then
		STATUS=untracked
	elif [[ ${status#?} == M* ]]; then
		STATUS=modified
	else
		STATUS=ok
	fi
}

