#: FUNCTION ^Ufunction name^u
#:   Tests whether ^Ufunction name^u is loaded, or merely in ^VFPATH^v.

function is-function-loaded {
    typeset fndef fnunset
    fndef=$(typeset +fp "${1:?}")
    [[ -n $fndef ]] || die "No such function ^B$1^b."

    fndef=${fndef% }
    fnunset="$1()"
    [[ $fndef != $fnunset ]]
}

