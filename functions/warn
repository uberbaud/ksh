# SYNOPSIS: output a warning to stderr

function warn {
	(($#))|| set '^GNo message provided^g'
	local ln1="$1"; shift
	if (($#)); then
		printf '  ^Wwarning^w: %s\n' "$ln1"
		printf '           %s\n' "$@"
	else
		printf '  ^Wwarning^w: %s\n' "$ln1"
	fi | sparkle
  } >&2


# vim: ft=ksh ts=4
