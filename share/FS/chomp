#: FUNCTION ^Uutf8_string^u ^[^Uchars^u^]
#:   Remove ^Uchars^u from the end of the ^Uutf8_string^u.
#:   ^Uchars^u defaults to one (1).

function chomp {
	[[ -z ${1:-} ]]&& { REPLY=""; return; }
	integer i=${2:-1}
	ustart=${ustart:-"$(print '\0302-\0364')"}
	ucont=${ucont:-"$(print '\0200-\0277')"}
	REPLY=$1
	while ((i--)); do
		REPLY=${REPLY%%@([$ustart]+([$ucont])|?)}
		[[ -z $REPLY ]]&& return;
	done
}

