#: FUNCTION ^Useconds.frac^u
#:   Converts ^Useconds.frac^u to ^[H:^]M:S^[.frac^]

function s2hms {
	local s m f H=
	s=${1%.*}; f="${1#"$s"}"
	m=$((s/60))
	s=$((s%60))
	((m>59)) && {
		H="$((m/60)):"
		m=$((m%60))
	  }
	typeset -Z 2 M=$m S=$s
	print -n -- "$H$M:$S$f"
}

