#: FUNCTION ^G(no arguments)^g ^= ^SSTDOUT^s
#:   Outputs marker+stemma+date+user@machine

function mk-stemma-header {
	needs uuid85 date id uname
	printf '\x40\x28\x23\x29[:%s: %s %s@%s]'	\
		"$(uuid85)"								\
		"$(date -u +'%Y/%m/%d %H:%M:%S')"		\
		"$(id -un)"								\
		"$(uname -n)"
}

