#: FUNCTION ^G(no arguments)^g
#:   ^BPrint^b ^Ucommand^u ^Uargs_underlined^u

function prn-cmd {
	local U='[4m' u='[24m'
	(($#))|| return
	print -rn -- "[1m$1[22m"; shift
	for a { print -rn -- " $U$a$u"; }
	print '\033[0;39;49m'
}

