# SYNOPSIS: Repeat the current song (aMuse player)

needs set-amuse-env pgrep fullstop die

function again {
	set-amuse-env; : ${again:?}
	pgrep -qf $amusePlayerId ||
		fullstop "$amusePlayerId is not playing."
	
	echo 'once' >$again ||
		die "Could not set [1m$amusePlayerId[22m to repeat."
}


