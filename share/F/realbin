#: FUNCTION ^Uexecutable name^u ^= ^SSTDOUT^s
#:   Get the fullpath of the bin called and running.

function realbin {
	[[ $1 == */* ]]|| {
		set -- "$(which $1 2>/dev/null)"
		[[ -n $1 ]]|| return 1
	  }
	readlink -f "$1"
}

