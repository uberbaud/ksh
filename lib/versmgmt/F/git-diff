#: FUNCTION
#:   vmgr vms-cmd

function git-diff {
	local file staged
	file=$1
	set -- $(git status --porcelain=v2 "$file")
	[[ $1 != 1 ]]|| return
	[[ $2 == @(?M|M.) ]]&& staged=--staged
	git --no-pager diff ${staged:-} "$file"
}

