#: FUNCTION ^G(no arguments)^g
#:   vmgr vms-cmd

function git-snap {
	local file msg
	file=${1:?}; shift
	git check-ignore -q "$file" && return
	git add "$file"
	msg=$*
	git-describe "$file" 'L' "$msg"
}

