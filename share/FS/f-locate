#: FUNCTION ^G(no arguments)^g
#:   Wrap two (2) locate calls with one command.

needs /usr/bin/locate
function f-locate {
	local USRDB=${XDG_CACHE_HOME:?}/locate.db
	/usr/bin/locate "$@"
	[[ " $* " == *-d\ * ]]||
		/usr/bin/locate -d "$USRDB" "$@"
}

