#: FUNCTION
#:   vmgr vms-cmd

needs ci term-get-text
function rcs-snap {
	local file msg
	file=${1:?}; shift
	msg=$*
	[[ -n $msg ]]|| {
		rcs-diff "$file"
		msg=$(term-get-text ci)
	}
	[[ -f RCS/$file,v ]]&&
		ci -q -ko -j -m"$msg" -u ./"$file" 2>&1
}

