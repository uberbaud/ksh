#: FUNCTION ^G(no arguments)^g
#:   Wrapper with autochange on clone

function f-git {
	local newdir want_cd=false gitresult
	[[ $# -eq 2 && $1 == clone && $2 == http*.git ]] && want_cd=true
	command git "$@"; gitresult=$?
	$want_cd || return $gitresult
	newdir="${2%.git}"; newdir="${newdir##http*/}"
	cd $newdir
}

