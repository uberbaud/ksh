# SYNOPSIS: Stop the aMuse player. Like pause but discards the
#           pause information.

function stop {
	set-amuse-env
	: ${paused_at:?} ${paused_song:?}
	needs pause
	pause
	: >$paused_at
	: >$paused_song
}


