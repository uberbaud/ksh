#: FUNCTION ^G(no arguments)^g
#:   Repeat the currently playing song (aMuse player)

needs amuse:set-env pgrep fullstop die

function amuse-again {
	amuse:set-env; : ${again:?}
	pgrep -qf $amusePlayerId ||
		fullstop "$amusePlayerId is not playing."
	
	echo 'once' >$again ||
		die "Could not set [1m$amusePlayerId[22m to repeat."
}


