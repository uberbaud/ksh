# SYNOPSIS: Dies if missing needed executables

function needs {
	local badlist=''
	for x { [[ -n "$(whence "$x")" ]] || badlist="$badlist $x"; }
	[[ -z $badlist ]]||
		die "Missing needed executables: [1m$badlist[0m"
}


