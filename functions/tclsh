# vim: filetype=ksh tabstop=4 textwidth=72 noexpandtab

#: FUNCTION ^G(no arguments)^g
#:   tclsh rlwrapper

function tclsh {
	export TCLSH="${TCLSH:-/usr/local/bin/tclsh8.6}"
	if (($#)); then
		"$TCLSH" "$@"
	else
		/usr/local/bin/rlwrap "$TCLSH"
	fi
}

