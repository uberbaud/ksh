#: FUNCTION ^Umsg line1^u ^[^Umsg lineâ€¦N^u^]
#:   Output a warning to ^SSTDERR^s.

function warn {
	(($#))|| set '^GNo message provided^g'
	local ln1="$1"; shift
	if (($#)); then
		printf '  ^Wwarning^w: %s\n' "$ln1"
		printf '           %s\n' "$@"
	else
		printf '  ^Wwarning^w: %s\n' "$ln1"
	fi | sparkle
  } >&2


