# SYNOPSIS: Wrapper for TODO

function newcd {
	(($#))|| set "$HOME"
	builtin cd "$@" && {
		[[ -f TODO ]]&& {
			printf '  \e[1;38;5;12m== TODO ==\e[0m\n'
			show-todos
		  }
		true # leave on a good note since `cd` did
	  }
}


