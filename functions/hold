#: FUNCTION ^G(no arguments)^g
#:   ^Tcd^t to the corresponding hold directory if there is one, or
#:   to ^S$HOME^s/hold/^S^UOS-VERSION^u^s/sys-files if not.

function hold {
	local dir="$PWD"
	local hold="$HOME/hold/$(uname -r)/sys-files"
	[[ -d $hold ]]|| die "No such directory ^S$hold^s."
	cd "$hold" || die "Could not ^Tcd^t to ^S$hold^s."
	[[ -d .$dir ]] && cd .$dir
}

