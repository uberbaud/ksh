#: FUNCTION ^G(no arguments)^g
#:   show a presentation file (html)

function S {
	local XID
	XID=$(xdotool search --name ' uberbaud-present$')
	xprop -id $XID	\
		-f _SURF_GO 8s	\
		-set _SURF_GO "file://$PWD/${1:?}"
}

