#: FUNCTION ^Thostname^t
#:   Wrapper around host to also check /etc/hosts

function f-host {
	local H
	H=${1:?Missing required parameter hostname}
	(($#==1)) && while read iaddr hname haliases; do
		[[ $iaddr == \#* ]]&& continue
		[[ $H == $hname || ,$haliases, == *,$H,* ]]|| continue
		print -r -- "$hname has address $iaddr"
		return
	done </etc/hosts
	/usr/bin/host "$@"
}

