# vim: filetype=ksh tabstop=4 textwidth=72 noexpandtab

#: FUNCTION ^Umsg line1^u ^[^Umsg line…N^u^]
#:   Output a notice to ^SSTDERR^s.

function notify {
	(($#))|| set '^GNo message provided.^g'
	local ln1="$1"; shift
	if (($#)); then
		printf ' ^N>>>^n %s\n' "$ln1"
		printf '     %s\n' "$@"
	else
		printf ' ^N>>>^n %s\n' "$ln1"
	fi | sparkle
} >&2


