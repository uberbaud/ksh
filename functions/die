#: FUNCTION ^Umsg-ln1^u ^[^Umsg-lnâ€¦N^u^]
#:   Output an error message to ^SSTDERR^s and exit.

function die {
	(($#))|| set '^GNo message provided^g'
	local ln1="$1"; shift
	if (($#)); then
		printf '  ^EFAILED^e: %s\n' "$ln1"
		printf '          %s\n' "$@"
	else
		printf '  ^EFAILED^e: %s\n' "$ln1"
	fi | sparkle
	kill -QUIT $$
  } >&2

# vim: ft=ksh ts=4
