#: FUNCTION ^U/path/to/file^u  ^[^Uvarname^u^] ^= ^O${^o^T2^t^O:-^o^VREPLY^v^O}^o
#:   Standardized filename to lockname (^T%^t ^= ^T%%^t, ^T/^t ^= ^T%^t)

needs gsub
function filename-from-file-w-path {
	local TX
	gsub % %% "${1:?}" TX
	gsub / % "$TX" ${2:+"$2"}
}

