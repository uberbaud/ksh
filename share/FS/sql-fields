#: FUNCTION ^G(no arguments)^g
#:   prints ^O$^o^V1^v split on ^O$^o^VSQLSEP^v tab-delimited.

function sql-fields {
	local TAB SEP F
	SEP="${2-  }"
	TAB='	'
	splitstr "$SQLSEP" "$1" sqlfields 
	for F in "${sqlfields[@]}"; do
		print -rn -- "$SEP$F" 
		SEP="$TAB"
	done
	print
}

