#: FUNCTION ^Udirectory^u ^[^U…^u^]
#:   ^Tfind "^t^S$@^s^T" -print0^t

function find0 {
	local P="${1:-}"
	[[ -d $P ]]&& shift || P=.
	/usr/bin/find "$P" "$@" -print0
}

