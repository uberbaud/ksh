# Double carets ( '^' → '^^' ), which is quoted for
# inclusion in a sparkle. Result ⇒ REPLY

function desparkle {
	typeset -- t="$*" p=''
	while [[ "$t" == *'^'* ]] { p="$p${t%%^*}^^"; t="${t#*^}"; }
	REPLY="$p$t"
}

# vim: ft=ksh ts=4
