#: FUNCTION ^[^Upath^u^]
#:   Returns true if given or current ^Upath^u is managed by ^Tgit^t.

function has-git {
	whence -p git &&
		git ${1:+-C "$1"} rev-parse --is-inside-work-tree
} 1>/dev/null 2>&1

