#: FUNCTION ^G(no arguments)^g
#:   Place a Mark in the history

function histmark {
	local want_unset=false
	integer i
	LASTHISTMARK="# MARK $(now) $*"
	print -s "$LASTHISTMARK"
	[[ $- == *u* ]]&& { want_unset=true; set +u; }
	set -A histmarks -- "${histmarks[@]}" "$LASTHISTMARK"
	$want_unset && set -u
}

