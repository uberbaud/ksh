# SYNOPSIS: gsub old new text
#           Replaces old occurences in text with new
#           result is placed in $REPLY

function gsub {
	local p='' old="$1" new="$2" text="$3"
	while [[ $text == *$old* ]]; do
		p="$p${text%%$old*}$new"
		text="${text#*$old}"
	done
	REPLY="$p$text"
}

