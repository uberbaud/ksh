# SYNOPSIS: Add new todo items

function todo {
	local now="$(date -u +'%Y-%m-%d %H:%M:%S Z')"
	local H="@ $now" TODO="$*"
	[[ -n $TODO ]]|| TODO="$(vtmp TODO)"
	splitstr NL "$TODO" todo
	[[ -f RCS/TODO,v ]]&& co -q -l TODO
	{ printf '%s\n' "$H"; printf '    %s\n' "${todo[@]}"; } >>TODO
	[[ -f RCS/TODO,v ]]&& ci -q -m'add' -u TODO
}


