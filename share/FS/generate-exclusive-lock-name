#: FUNCTION ^Ulock_name^u ^[^Ulock_path^u^] ^= ^S$REPLY^s
#:   Create a name for use by {get,release}-exclusive-lock\*

function generate-exclusive-lock-name {
	local T L P
	REPLY=''

	T="${2:-${TMPDIR:-/tmp}}"
	[[ -n ${2:-} ]]|| P=excl-lock-
	L="$T/${P:-}${1:?Missing resource name}"

	needs-path -or-warn "$T" || return

	REPLY="$L"
	return 0
}

