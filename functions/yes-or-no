# SYNOPSIS: Ask then return true for y, false for n, repeat question 
#           otherwise

function yes-or-no {
	(($#))|| set 'Yes or No'
	typeset -l go_on='please'
	while [[ $go_on == !(y|yes|n|no) ]]; do
		print -nu2 -- "  $1 [y,n]? "
		read -r go_on
	done
	[[ $go_on == y* ]]
}


