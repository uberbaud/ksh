# vim: filetype=ksh tabstop=4 textwidth=72 noexpandtab

#: FUNCTION ^G(no arguments)^g
#:   Wrapper around $BS/m-done.ksh

function m-done {
	[[ -n $TTY ]]&& export TTY
	${MAIL_APP_PATH:?}/B/_done.ksh "$@"
	[[ -n ${PRE_MAIL_PWD-} ]]&& {
		builtin cd "$PRE_MAIL_PWD"
		unset PRE_MAIL_PWD
	  }
	[[ -n ${PREMAIL_LOGLEVEL:-} ]]&& {
		LOGLEVEL=$PREMAIL_LOGLEVEL
		unset PREMAIL_LOGLEVEL
	  }
}

