# SYNOPSIS: output a notice to stderr

function notify {
	(($#))|| set '^GNo message provided.^g'
	local ln1="$1"; shift
	if (($#)); then
		printf ' ^N>>>^n %s\n' "$ln1"
		printf '     %s\n' "$@"
	else
		printf ' ^N>>>^n %s\n' "$ln1"
	fi | sparkle
} >&2


