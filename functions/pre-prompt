# vim: filetype=ksh tabstop=4 textwidth=72 noexpandtab

#: FUNCTION ^G(no arguments)^g
#:   Handle all the tidbits before a prompt is drawn.

function pre-prompt {
	# window title
	print -nu2 "\033]0;$HOSTNAME ($PWD)\007"
	forceline
	[[ $- == *f* ]]&& print '\033[41;37mNOGLOB\033[0m'
}

