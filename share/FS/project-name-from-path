#: FUNCTION ^[^Upath^u^] ^= ^SSTDOUT^s
#:   Get project name from a given ^Upath^u or ^O$^o^VPWD^v.

needs needs-file
function project-name-from-path {
	local F P T
	P=${1:-$PWD}
	[[ $P == ${HOME:?}/projects/?(?)???-????(/*) ]]|| return
	P=${P#"$HOME"/projects/}
	P=${P%%/*}
	F=$HOME/projects/$P/PROJECT
	needs-file -or-die "$F"
	awk -F'[\|:] *' '/^summary/ {print $2;nextfile}' "$F"
}

