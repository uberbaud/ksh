#: FUNCTION ^G(no arguments)^g
#:   Wrapper around cpanm

needs cpanm
function f-cpanm {
	local log=$HOME/hold/$(uname -r)/cpanm-install.lst
	for a { print -- "$a" >>$log; }
	command cpanm -l $XDG_DATA_HOME "$@"
}

