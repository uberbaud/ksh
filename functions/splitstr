# SYNOPSIS: splits a string ($2) on $1 into array $3 (or $reply)

function splitstr {
	local IFS="$1"
	[[ $1 == NL  ]]&&	IFS='
' # ← SINGLE QUOTE!!! ENCAPSULATING newline
	[[ $1 == TAB  ]]&&	IFS='	' # ← ACTUAL TAB CHARACTER
	set -A ${3:-reply} -- $2
}

